root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace = true
insert_final_newline=false
indent_style=tab

[{*.js,.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[{*.css,*.scss}]
indent_style=space
indent_size=2

[{README,readme,*.md}]
trim_trailing_whitespace = false